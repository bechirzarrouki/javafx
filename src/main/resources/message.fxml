<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.MessageController"
      spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">

    <Label text="Messages" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <VBox fx:id="messagesContainer" spacing="5"
          style="-fx-border-color: #ccc; -fx-padding: 10; -fx-background-color: #fafafa;"
          prefHeight="300" prefWidth="400" />

    <HBox spacing="10">
        <TextField fx:id="messageInput" promptText="Type your message..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendButton" text="Send" />
    </HBox>

</VBox>
