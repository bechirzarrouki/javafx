<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.controllers.BackCourseDetailsController"
      style="-fx-background-color: #f5f5f5;" spacing="0">
    
    <fx:include source="navbar.fxml"/>
    
    <ScrollPane fitToWidth="true" style="-fx-background: #f5f5f5; -fx-border-color: #f5f5f5;">
        <VBox style="-fx-padding: 20;" spacing="20">
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <HBox spacing="20">
                    <ImageView fx:id="courseImage" fitWidth="400" fitHeight="300" preserveRatio="true"/>
                    <VBox spacing="10">
                        <Label fx:id="courseName" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #53348D;"/>
                        <Label fx:id="courseDescription" wrapText="true" maxWidth="400"/>
                        
                        <GridPane vgap="10" hgap="20">
                            <Label text="Duration:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="durationLabel" GridPane.columnIndex="1"/>
                            
                            <Label text="Type:" style="-fx-font-weight: bold;" GridPane.rowIndex="1"/>
                            <Label fx:id="typeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            
                            <Label text="Price:" style="-fx-font-weight: bold;" GridPane.rowIndex="2"/>
                            <Label fx:id="priceLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        </GridPane>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <Label text="Quiz Management" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #53348D;"/>
                
                <HBox spacing="10">
                    <Button text="Add Quiz" onAction="#handleAddQuiz" style="-fx-background-color: #8B19A4; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
                    <Button text="Edit Quiz" onAction="#handleEditQuiz" style="-fx-background-color: #8B19A4; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
                    <Button text="Delete Quiz" onAction="#handleDeleteQuiz" style="-fx-background-color: #8B19A4; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
                </HBox>

                <TableView fx:id="quizzesTable" style="-fx-padding: 10 0 0 0; -fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Quiz Title" prefWidth="300">
                            <style>
                                -fx-alignment: CENTER-LEFT;
                                -fx-font-weight: bold;
                            </style>
                        </TableColumn>
                        <TableColumn fx:id="questionsColumn" text="Questions" prefWidth="400">
                            <style>
                                -fx-alignment: CENTER-LEFT;
                            </style>
                        </TableColumn>
                    </columns>
                    <style>
                        -fx-table-cell-border-color: transparent;
                        -fx-background-color: white;
                    </style>
                </TableView>
            </VBox>

            <HBox spacing="10" style="-fx-padding: 20 0 0 0;">
                <Button text="Back" onAction="#handleBack" style="-fx-background-color: #8B19A4; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox> 