<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.controllers.FrontController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;" prefWidth="1200" prefHeight="800">
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <VBox>
                <Label text="LIST OF COURSES" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #53348D;"/>
                <Label text="Explore our wide range of courses" style="-fx-font-size: 18px; -fx-text-fill: #666;"/>
            </VBox>
            <ImageView>
                <Image url="@../images/learning.png"/>
            </ImageView>
        </HBox>
    </VBox>
    
    <FlowPane fx:id="coursesGrid" hgap="30" vgap="30" style="-fx-padding: 20;" prefWrapLength="1200"/>
</VBox> 