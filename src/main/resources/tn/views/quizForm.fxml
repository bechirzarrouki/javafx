<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.controllers.QuizController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;" spacing="20" fx:id="quizContainer">
    
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" spacing="20">
        <Label text="Quiz Form" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #53348D;"/>
        
        <VBox spacing="10">
            <Label text="Quiz Title:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="titleField" promptText="Enter quiz title" style="-fx-padding: 5;"/>
            <Label fx:id="titleErrorLabel" style="-fx-text-fill: #f44336; -fx-font-size: 12px;" visible="false"/>
        </VBox>
        
        <VBox spacing="15">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Questions" style="-fx-font-weight: bold;"/>
                <Button fx:id="addQuestionButton" text="Add Question" style="-fx-background-color: #8B19A4; -fx-text-fill: white;"/>
            </HBox>
            
            <VBox fx:id="questionsContainer" spacing="15" style="-fx-padding: 10;"/>
        </VBox>
        
        <HBox spacing="10" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="saveQuizButton" text="Save Quiz" style="-fx-background-color: #8B19A4; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
            <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #8B19A4; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
        </HBox>
    </VBox>
</VBox> 