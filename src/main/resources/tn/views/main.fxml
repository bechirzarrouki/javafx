<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.controllers.MainController" alignment="CENTER" spacing="20">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Text text="Course Management System" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #53348D;"/>
    
    <HBox spacing="20" alignment="CENTER">
        <Button text="Front Office" onAction="#openFrontOffice" style="-fx-background-color: #53348D; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
        <Button text="Back Office" onAction="#openBackOffice" style="-fx-background-color: #8B19A4; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    </HBox>
</VBox> 