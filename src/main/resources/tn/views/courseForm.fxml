<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.controllers.CourseFormController" spacing="20" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Course Form" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #53348D;"/>

    <GridPane vgap="10" hgap="10">
        <Label text="Course Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nomCoursField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Duration (hours):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="dureeField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Image Path:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="imageField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #8B19A4; -fx-text-fill: white;"/>
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #53348D; -fx-text-fill: white;"/>
    </HBox>
</VBox> 