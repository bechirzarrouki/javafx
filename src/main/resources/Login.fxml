<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.LoginController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="anchor-pane">

    <HBox alignment="CENTER" AnchorPane.topAnchor="0.0" 
          AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0">
        
        <!-- Left side -->
        <StackPane fx:id="leftPanel" styleClass="login-left-panel" HBox.hgrow="ALWAYS">
            <!-- GIF background -->
            <ImageView fx:id="gifBackground" fitWidth="400.0" fitHeight="600.0" preserveRatio="true" pickOnBounds="true">
                <image>
                    <Image url="@/media/gif.gif" preserveRatio="true" />
                </image>
            </ImageView>

        </StackPane>

        <!-- Right side - Login Form -->
        <VBox alignment="CENTER" spacing="20.0" styleClass="login-form-panel" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>

            <Label text="Sign In" styleClass="title-label"/>

            <VBox spacing="15" styleClass="form-group">
                <Label text="Username" styleClass="field-label"/>
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field"/>
            </VBox>

            <VBox spacing="15" styleClass="form-group">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field"/>
            </VBox>

            <HBox alignment="CENTER_RIGHT">
                <Hyperlink text="Forgot your password?" onAction="#handleForgotPassword" styleClass="hyperlink"/>
            </HBox>

            <Button text="Sign In" onAction="#handleLogin" styleClass="primary-button"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="New to InnovMatch?" styleClass="text-muted"/>
                <Hyperlink text="Create an account" onAction="#handleCreateAccount" styleClass="hyperlink"/>
            </HBox>

            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
        </VBox>
    </HBox>
</AnchorPane>
