<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="profile-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserProfileController">
    <ScrollPane fitToWidth="true" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" styleClass="profile-scrollpane">
        <VBox spacing="20" alignment="TOP_CENTER" styleClass="profile-content">
            <!-- Header Section -->
            <HBox styleClass="header-section" alignment="CENTER_RIGHT">
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </HBox>

            <!-- Profile Section -->
            <VBox alignment="CENTER" spacing="15" styleClass="profile-section">
                <StackPane styleClass="profile-image-container">
                    <ImageView fx:id="profileImageView" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" styleClass="profile-image">
                        <Image url="@images/default-avatar.png"/>
                    </ImageView>
                </StackPane>
                <Button fx:id="changeImageButton" text="Change Profile Picture" styleClass="change-image-button"/>
                
                <Label fx:id="usernameLabel" styleClass="profile-username"/>
                <Label fx:id="emailLabel" styleClass="profile-email"/>
            </VBox>

            <!-- Details Section -->
            <VBox spacing="20" styleClass="details-section" maxWidth="500">
                <Label text="Profile Information" styleClass="section-title"/>
                
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- Username Field -->
                    <Label text="Username:" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="usernameField" styleClass="profile-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Email Field -->
                    <Label text="Email:" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" styleClass="profile-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <!-- Phone Number Field -->
                    <Label text="Phone Number:" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="phoneNumberField" styleClass="profile-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Password Fields -->
                    <Label text="New Password:" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="newPasswordField" styleClass="profile-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Confirm Password:" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="confirmPasswordField" styleClass="profile-field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="saveButton" text="Save Changes" onAction="#handleSave" styleClass="save-button"/>
                </HBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" styleClass="message-label" alignment="CENTER" wrapText="true"/>
            </VBox>
            <padding>
                <Insets bottom="20"/>
            </padding>
        </VBox>
    </ScrollPane>
</AnchorPane>
