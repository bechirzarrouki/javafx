<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UpdateInvestmentController">

    <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background: transparent;" pannable="true" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <content>
            <VBox spacing="20" style="-fx-padding: 20;">

                <!-- Investment Update Section -->
                <VBox maxWidth="500.0" spacing="18" style="-fx-padding: 25; -fx-background-radius: 15;" styleClass="investment-box">
                    <Label styleClass="title-label" text="Update Your Investment" />
                    <TextField fx:id="updateContentField" promptText="Update your investment content" styleClass="input-style" />

                    <VBox spacing="10">
                        <Label styleClass="subtitle-label" text="Selected Type:" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <Label fx:id="selectedTypeLabel" text="No Type Selected" styleClass="selected-type-label"/>
                            <Button onAction="#openTypeModal" styleClass="choose-type-btn" text="Change Type" />
                        </HBox>
                    </VBox>

                    <HBox alignment="CENTER_RIGHT" spacing="15">
                        <Button onAction="#updateInvestment" styleClass="action-btn" text="Update" />
                        <Button onAction="#cancelUpdate" styleClass="modal-cancel-btn" text="Cancel" />
                    </HBox>
                </VBox>

                <!-- Type Selection Modal -->
                <VBox fx:id="typeModal" spacing="10" styleClass="modal-overlay" visible="false">
                    <VBox alignment="CENTER" spacing="15" style="-fx-pref-width: 600px;" styleClass="modal-container">
                        <Label styleClass="modal-title" text="Select Investment Type" />
                        <ListView fx:id="typeList" prefHeight="200" prefWidth="350" styleClass="styled-list-view">
                            <!-- Items will be added dynamically in the controller -->
                        </ListView>
                        <HBox alignment="CENTER_RIGHT" spacing="15">
                            <Button onAction="#submitType" styleClass="modal-confirm-btn" text="Confirm" />
                            <Button onAction="#closeTypeModal" styleClass="modal-cancel-btn" text="Cancel" />
                        </HBox>
                    </VBox>
                </VBox>

            </VBox>
        </content>
    </ScrollPane>

</AnchorPane>
