<StackPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="navbar.css">
    <HBox styleClass="nav-bar" prefHeight="70" spacing="20" alignment="CENTER">
        <!-- Logo Section -->
        <HBox alignment="CENTER_LEFT" styleClass="nav-logo-container">
            <Text text="InnovMatch" styleClass="nav-logo"/>
        </HBox>

        <!-- Search Section -->
        <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <TextField promptText="Rechercher un utilisateur..." styleClass="search-field"/>
        </HBox>

        <!-- Right side Profile & Chat Section -->
        <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="nav-right-container">
            <!-- Chat Button -->
            <Button styleClass="icon-button">
                <StackPane>
                    <Circle fx:id="chatCircle" styleClass="chat-icon-bg"/>
                    <Text text="ðŸ’¬" styleClass="chat-icon"/>
                </StackPane>
            </Button>

            <!-- Profile Image -->
            <ImageView fx:id="profileImage" styleClass="profile-image"/>
        </HBox>
    </HBox>
</StackPane>