<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" >
    <HBox spacing="20" alignment="CENTER" style="-fx-background-color: #3C2466; -fx-border-radius: 5; -fx-padding: 10;" prefHeight="60" >
        <!-- Logo Section -->
        <HBox alignment="CENTER_LEFT">
            <Text text="InnovMatch" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white; -fx-font-family: 'Pacifico';"/>
        </HBox>

        <!-- Search Section -->
        <HBox alignment="CENTER">
            <TextField promptText="Rechercher un utilisateur..." style="-fx-background-color: white; -fx-border-radius: 20px; -fx-border-color: #53348D; -fx-padding: 10px;" prefWidth="300"/>
        </HBox>

        <!-- Right side Profile & Chat Section -->
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <!-- Chat Button -->
            <Button style="-fx-background-color: transparent; -fx-border: none;">
                <StackPane>
                    <Circle fx:id="chatCircle" fill="white" radius="20"/>
                    <Text text="ðŸ’¬" style="-fx-font-size: 20px; -fx-fill: #53348D;"/>
                </StackPane>
            </Button>

            <!-- Profile Image -->
            <ImageView fx:id="profileImage" fitHeight="40" fitWidth="40" preserveRatio="true" style="-fx-border-radius: 50%; -fx-border-color: #53348D;"/>
        </HBox>
    </HBox>
</StackPane>
