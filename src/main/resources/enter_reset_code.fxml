<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.EnterResetCodeController" 
            prefHeight="600.0" prefWidth="800.0" styleClass="anchor-pane">

    <HBox alignment="CENTER" AnchorPane.topAnchor="0.0" 
          AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0">
        
        <!-- Left side - Image -->
        <VBox alignment="CENTER" styleClass="login-left-panel" HBox.hgrow="ALWAYS">
            <ImageView fitWidth="300.0" preserveRatio="true">
                <Image url="@/images/innovmatch-logo.png"/>
            </ImageView>
            <Label text="Reset Your Password" styleClass="welcome-text"/>
            <Label text="Create a new secure password" styleClass="slogan-text"/>
        </VBox>

        <!-- Right side - Reset Password Form -->
        <VBox alignment="CENTER" spacing="20.0" styleClass="login-form-panel" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>

            <Label text="Enter Reset Code" styleClass="title-label">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            
            <Label text="Enter the code we sent to your email and create a new password." 
                   styleClass="text-muted" wrapText="true"/>

            <VBox spacing="8" styleClass="form-group">
                <Label text="Reset Code" styleClass="field-label"/>
                <TextField fx:id="codeField" promptText="Enter the 6-digit code" styleClass="text-field"/>
            </VBox>

            <VBox spacing="8" styleClass="form-group">
                <Label text="New Password" styleClass="field-label"/>
                <PasswordField fx:id="newPasswordField" promptText="Enter your new password" styleClass="text-field"/>
            </VBox>

            <VBox spacing="8" styleClass="form-group">
                <Label text="Confirm Password" styleClass="field-label"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm your new password" styleClass="text-field"/>
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>

            <Button text="Reset Password" onAction="#handleResetPassword" styleClass="primary-button" prefWidth="200"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Changed your mind?" styleClass="text-muted"/>
                <Hyperlink text="Back to Login" onAction="#handleBackToLogin" styleClass="hyperlink"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
