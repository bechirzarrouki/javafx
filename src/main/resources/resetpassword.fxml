<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.ResetPasswordController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="anchor-pane">

    <HBox alignment="CENTER" AnchorPane.topAnchor="0.0" 
          AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0">
        
        <!-- Left side - Image -->
        <VBox alignment="CENTER" styleClass="login-left-panel" HBox.hgrow="ALWAYS">
            <ImageView fitWidth="300.0" preserveRatio="true">
                <Image url="@/images/innovmatch-logo.png"/>
            </ImageView>
            <Label text="Reset Your Password" styleClass="welcome-text"/>
            <Label text="We'll help you get back on track" styleClass="slogan-text"/>
        </VBox>

        <!-- Right side - Reset Password Form -->
        <VBox alignment="CENTER" spacing="20.0" styleClass="login-form-panel" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>

            <Label text="Password Reset" styleClass="title-label"/>
            
            <Label text="Enter your email address and we'll send you instructions to reset your password." 
                   styleClass="text-muted" wrapText="true"/>

            <VBox spacing="15" styleClass="form-group">
                <Label text="Email" styleClass="field-label"/>
                <TextField fx:id="emailField" promptText="Enter your email address" styleClass="text-field"/>
            </VBox>

            <Button text="Send Reset Instructions" onAction="#handleResetPassword" styleClass="primary-button"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Remember your password?" styleClass="text-muted"/>
                <Hyperlink text="Back to Login" onAction="#handleBackToLogin" styleClass="hyperlink"/>
            </HBox>

            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
        </VBox>
    </HBox>
</AnchorPane>
