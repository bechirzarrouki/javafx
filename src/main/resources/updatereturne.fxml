<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" prefHeight="500" prefWidth="800" stylesheets="style.css"
          xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controllers.updateReturnController">

    <columnConstraints>
        <ColumnConstraints prefWidth="200" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="0">
        <center>
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
                <Label text="Update Investment Return" styleClass="title-label" />

                <VBox spacing="12" maxWidth="400">
                    <Label text="Description:" styleClass="form-label"/>
                    <TextField fx:id="descriptionField" styleClass="input-style"/>

                    <Label text="Return Type:" styleClass="form-label"/>
                    <TextField fx:id="typeRetourField" styleClass="input-style"/>

                    <Label text="Rate of Return:" styleClass="form-label"/>
                    <TextField fx:id="tauxRendementField" styleClass="input-style"/>

                    <Label text="Deadline Date:" styleClass="form-label"/>
                    <DatePicker fx:id="dateDeadlineField" styleClass="date-picker"/>

                    <Label text="Status:" styleClass="form-label"/>
                    <TextField fx:id="statusField" styleClass="input-style"/>
                </VBox>

                <HBox alignment="CENTER" spacing="15">
                    <Button text="Update" onAction="#updateReturn" styleClass="modal-confirm-btn"/>
                    <Button text="Cancel" onAction="#cancelUpdate" styleClass="modal-cancel-btn"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</GridPane>