<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" prefHeight="500" prefWidth="800" stylesheets="style.css"
          xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controllers.ReturnController">

    <!-- Colonnes : sidebar + contenu -->
    <columnConstraints>
        <ColumnConstraints prefWidth="200" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <!-- Sidebar -->
    <fx:include source="sidebar.fxml" GridPane.columnIndex="0" GridPane.rowIndex="0" />

    <!-- Contenu principal avec navbar + formulaire -->
    <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="0">

        <!-- Navbar en haut -->
        <top>
            <fx:include source="navbar.fxml" />
        </top>

        <!-- Formulaire centrÃ© -->
        <center>
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
                <Label text="Add Investment Return" styleClass="title-label" />

                <VBox spacing="12" maxWidth="400">
                    <Label text="Description:" styleClass="form-label"/>
                    <TextField fx:id="descriptionField" promptText="e.g., Quarterly profit" styleClass="input-style"/>

                    <Label text="Return Type:" styleClass="form-label"/>
                    <TextField fx:id="typeRetourField" promptText="e.g., Dividend" styleClass="input-style"/>

                    <Label text="Rate of Return:" styleClass="form-label"/>
                    <TextField fx:id="tauxRendementField" promptText="e.g., 8.5" styleClass="input-style"/>

                    <Label text="Deadline Date:" styleClass="form-label"/>
                    <DatePicker fx:id="dateDeadlineField" styleClass="date-picker"/>

                    <Label text="Status:" styleClass="form-label"/>
                    <TextField fx:id="statusField" promptText="e.g., Pending" styleClass="input-style"/>
                </VBox>

                <HBox alignment="CENTER" spacing="15">
                    <Button text="Save" onAction="#submitReturn" styleClass="modal-confirm-btn"/>
                    <Button text="Cancel" onAction="#cancelReturn" styleClass="modal-cancel-btn"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</GridPane>
